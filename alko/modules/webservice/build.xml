            <classpath>
                <pathelement path="${test.dir}/target" />
                <path refid="compile.dependency.path" />
                <pathelement location="${build.dir}/${project.artifactId}-${project.version}.jar" />
            </classpath>
        </javac>
         <copy todir="${test.dir}/target" >
            <fileset dir="${test.res.dir}">
                <include name="aruanne.csv" />
            </fileset>
        </copy>

         <junit printsummary="yes" fork="yes" haltonfailure="yes" dir="${test.dir}/target">
            <classpath>
                <pathelement path="${test.dir}/target" />
                <path refid="compile.dependency.path" />
                <pathelement location="${build.dir}/${project.artifactId}-${project.version}.jar" />
            </classpath>
            <formatter type="plain" /-->
            <!--formatter type="xml"/-->
            <!--batchtest fork="yes" todir="${test.dir}/target" haltonfailure="no">
                <fileset dir="${test.dir}/target">
                    <include name="test/XteeTest.class" /> 
                	
                    <include name="test/AretoServiceTest.class" />
                    
               </fileset>
            </batchtest>
        </junit-->
    </target>

	
    <target name="clean" depends="">
		<delete dir="${classes.dir}" />
    	<delete dir="${test.dir}" />
	    <delete file="${package.file}" />
    </target>

</project>
